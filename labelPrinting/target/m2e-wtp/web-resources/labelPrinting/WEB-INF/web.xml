<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
  
  
    <web-app>
 
     <display-name>fuck</display-name> 
     
	<servlet>

		<servlet-name>it.web.MainApplication</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>it.web.MainApplication</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>it.web</param-value>
		</init-param>
		<init-param>
			<param-name>jersey.config.server.mvc.templateBasePath.jsp</param-name>
			<param-value>/WEB-INF/</param-value>
		</init-param>

		<!-- <init-param> <param-name>com.sun.jersey.config.property.JSPTemplatesBasePath</param-name> 
			<param-value>/WEB-INF/jsp</param-value> </init-param> <init-param> <param-name>com.sun.jersey.config.property.WebPageContentRegex</param-name> 
			<param-value>/(resources|(WEB-INF/jsp))/.*</param-value> </init-param> -->

		<load-on-startup>1</load-on-startup>
	</servlet>
	
   

	<servlet-mapping>
		<servlet-name>it.web.MainApplication</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>
  
    <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
 


</web-app>
